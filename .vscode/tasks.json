{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build all in one",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/magic/magic.c",
                "${workspaceFolder}/magic/utils.c",
                "-o",
                "${workspaceFolder}/magic/magic" // שימו לב: שם קובץ ההרצה הוא magic
            ],
            "options": {
                "cwd": "${workspaceFolder}/magic"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}